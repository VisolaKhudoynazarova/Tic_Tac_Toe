<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="idrok.visola_khudoynazarova.tictactoe.GameViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    tools:context=".Fragments.GameFragment">

    <TextView
        android:id="@+id/tv_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:shadowColor="#000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="PlayerX: 0"
        android:textColor="@color/color4"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:padding="8dp"
        android:text="PlayerO: 0"
        android:textSize="20sp"
        android:shadowColor="#000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textColor="@color/color4"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#e0e0e0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_00"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                android:background="@color/color"
                tools:text="X" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color4" />

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color4" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:background="@color/color"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/color4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:background="@color/color"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color4" />

            <TextView
                android:id="@+id/tv_11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:background="@color/color"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color4" />

            <TextView
                android:id="@+id/tv_12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/color4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_20"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:background="@color/color"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color4"/>

            <TextView
                android:id="@+id/tv_21"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:textColor="@color/color4"
                android:textStyle="bold|italic"
                tools:text="X" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color4" />

            <TextView
                android:id="@+id/tv_22"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:padding="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color4"
                android:background="@color/color"
                android:textStyle="bold"
                tools:text="O" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="Exit"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_new_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="New game"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_exit"
        app:layout_constraintTop_toBottomOf="@id/ll"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>